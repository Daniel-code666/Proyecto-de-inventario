@model regMVC.Models.prodCategory

@{
    ViewBag.Title = "listByCat";
}

<head>
    <style>
        .body1 {
            background-color: rgba(30, 30, 30, 0.90);
        }

        h2 {
            color: antiquewhite;
        }

        .btn, .btn-default {
            background-color: rgba(3, 169, 244, 0.68);
            padding: 5px 10px;
            text-decoration: none;
            color: antiquewhite;
            letter-spacing: 2px;
            font-size: 13px;
        }

        .btn:before, btn-default:before {
            content: '';
            width: 100%;
            height: 100%;
            background: #03a9f4;
            z-index: -1;
            transition: transform 0.5s;
            transform-origin: bottom right;
            transform: scale(0);
        }

        .btn:hover:before, btn-default:hover:before {
            transition: transform 0.5s;
            transform-origin: top left;
            transform: scale(1);
        }

        table, table-striped {
            background-color: rgba(79, 79, 79, 0.91);
        }

        th {
            color: rgb(196, 196, 196);
        }

        td {
            color: rgb(196, 196, 196);
        }

        tr {
            color: rgb(196, 196, 196)
        }
    </style>
</head>

<body class="body1">
    <h2>Listar por categoría</h2>

    <p align="right">

    </p>

    @using (Html.BeginForm())
    {

        <div align="center">

            @Html.DropDownListFor(model => model.categoriaSeleccionada, Model.Categories, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Categories, "", new { @class = "text-danger" })

            <p>

            </p>

            <input type="submit" value="Listar por categoría" class="btn btn-default" />
        </div>

        <p>

        </p>
    }

    @if (Model.SearchResults != null && Model.SearchResults.Count > 0)
    {

        <table class="table">

            <thead>
                <tr>
                    <th>Nombre del producto</th>
                    <th>Marca del producto</th>
                    <th>Precio de compra</th>
                    <th>Categoría</th>
                    <th>Precio de venta</th>
                    <th>Grupo</th>
                    <th>Código del producto</th>
                    <th>Fecha de expiración</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.SearchResults)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.marca)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.precio_compra)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.categoria)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.precio_venta)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.grupo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.codigo_prod)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.fecha_expiracion)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "prodEdit", new { id = item.id }) |
                            @Html.ActionLink("Detalles", "prodDetails", new { id = item.id }) |
                            @Html.ActionLink("Eliminar", "prodDel", new { id = item.id }) |
                            @Html.ActionLink("PDF", "DetailsToPdf", new { id = item.id })
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    }

    <div>
        <a class="btn btn-default" href="~/producto/prodList"> &laquo; Regresar</a>
    </div>
</body>