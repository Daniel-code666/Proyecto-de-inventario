@model regMVC.Models.productos

@{
    ViewBag.Title = "prodDel";
}

<head>
    <style>
        .body1 {
            background-color: rgba(30, 30, 30, 0.90);
        }

        h2 {
            color: antiquewhite;
        }

        h3 {
            color: rgb(196, 196, 196);
        }

        .btn, .btn-default {
            background-color: rgba(3, 169, 244, 0.68);
            padding: 5px 10px;
            text-decoration: none;
            color: antiquewhite;
            letter-spacing: 2px;
            font-size: 13px;
        }

        .btn:before, btn-default:before {
            content: '';
            width: 100%;
            height: 100%;
            background: #03a9f4;
            z-index: -1;
            transition: transform 0.5s;
            transform-origin: bottom right;
            transform: scale(0);
        }

        .btn:hover:before, btn-default:hover:before {
            transition: transform 0.5s;
            transform-origin: top left;
            transform: scale(1);
        }

        .bt1, .btn-default1 {
            background-color: rgba(155, 8, 8, 0.93);
            padding: 5px 10px;
            text-decoration: none;
            color: antiquewhite;
            letter-spacing: 2px;
            font-size: 13px;
            border-radius: 3px;
        }

        .bt1:before, .btn-default1:before {
            content: '';
            width: 100%;
            height: 100%;
            background: antiquewhite;
            z-index: -1;
            transition: transform 0.5s;
            transform-origin: bottom right;
            transform: scale(0);
        }

        .btn1:hover:before, btn-default1:hover:before {
            transition: transform 0.5s;
            transform-origin: top left;
            transform: scale(1);
        }

        dt{
            color: rgb(196, 196, 196);
        }

        dd{
            color:antiquewhite;
        }

        p {
            color: rgb(196, 196, 196);
        }
    </style>
</head>

