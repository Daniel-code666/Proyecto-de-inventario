@model regMVC.Models.caja

@{
    ViewBag.Title = "CajaMsj";
}

<head>
    <style>
        .body1 {
            background-color: rgba(30, 30, 30, 0.90);
        }

        h2 {
            color: antiquewhite;
        }

        p, span {
            color: rgb(196, 196, 196);
        }

        .btn, .btn-default {
            background-color: rgba(3, 169, 244, 0.68);
            padding: 5px 10px;
            text-decoration: none;
            color: antiquewhite;
            letter-spacing: 2px;
            font-size: 13px;
        }

        .btn:before, btn-default:before {
            content: '';
            width: 100%;
            height: 100%;
            background: #03a9f4;
            z-index: -1;
            transition: transform 0.5s;
            transform-origin: bottom right;
            transform: scale(0);
        }

        .btn:hover:before, btn-default:hover:before {
            transition: transform 0.5s;
            transform-origin: top left;
            transform: scale(1);
        }
    </style>
</head>

<body class="body1">
    <h2>Opss...</h2>

    <div class="alert alert-danger">
        <strong>Para vender productos es necesario asignar cierta cantidad en el mostrador, mínimo 1</strong>
    </div>

    <div align="right">
        <a class="btn btn-default" href="~/caja/ProdOnMostrador">&laquo; Regresar</a> |
        <a class="btn btn-default" href="~/mostrador/ListMostrador">&laquo; Ir al mostrador</a>
    </div>
</body>
