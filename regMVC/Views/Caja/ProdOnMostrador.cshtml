@model regMVC.Models.ProductandBodViewModel

@{
    ViewBag.Title = "ProdOnMostrador";
}

<head>
    <style>

        .body1
        {
            background-color: rgba(30, 30, 30, 0.90);
        }

        h2 {
            color: antiquewhite;
        }

        p {
            color: rgb(196, 196, 196);
        }

        table {
            background-color: rgba(79, 79, 79, 0.91);
        }

        .tr1 {
            color: rgb(221, 221, 221);
        }

        td {
            background-color: rgba(30, 30, 30, 0.90);
        }

        th {
            background-color: rgba(30, 30, 30, 0.90);
        }

        .btn, .btn-default {
            background-color: rgba(3, 169, 244, 0.68);
            padding: 5px 10px;
            text-decoration: none;
            color: antiquewhite;
            letter-spacing: 2px;
            font-size: 13px;
        }

        .btn:before, btn-default:before {
            content: '';
            width: 100%;
            height: 100%;
            background: #03a9f4;
            z-index: -1;
            transition: transform 0.5s;
            transform-origin: bottom right;
            transform: scale(0);
        }

        .btn:hover:before, btn-default:hover:before {
            transition: transform 0.5s;
            transform-origin: top left;
            transform: scale(1);
        }

    </style>
</head>

<body class="body1">

    @{ var order1 = Model.prod.OrderBy(a => a.codigo_prod);}

    @{ var order = Model.bod.OrderBy(a => a.cod_prod);}

    @{ var order2 = Model.mostrador.OrderBy(x => x.cod_prod); }

    <h2>Venta de productos</h2>

    <table class="table">
        <tr>
            <td>
                <table class="table">
                    <tr class="tr1">
                        <td>
                            <strong>Nombre</strong>
                        </td>
                        <td>
                            <strong>Precio de venta</strong>
                        </td>
                    </tr>
                    @foreach (var item0 in order1)
                    {
                        <tr class="tr1">
                            <td>
                                @Html.DisplayFor(modelItem => item0.nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item0.precio_venta)
                            </td>
                        </tr>
                    }
                </table>
            </td>
            <td>
                <table class="table table-striped">
                    <tr class="tr1">
                        <td>
                            <strong>Código</strong>
                        </td>
                    </tr>
                    @foreach (var item1 in order)
                    {
                        <tr class="tr1">
                            <td>
                                @Html.DisplayFor(modelItem => item1.cod_prod)
                            </td>
                        </tr>
                    }
                </table>
            </td>
            <td>
                <table class="table table-striped">
                    <tr class="tr1">
                        <td>
                            <strong>Cantidad en mostrador</strong>
                        </td>
                    </tr>
                    @foreach (var item3 in order2)
                    {
                        <tr class="tr1">
                            <th>
                                @Html.DisplayFor(modelItem => item3.cant_prod_mostrador)
                            </th>
                        </tr>
                    }
                </table>
            </td>
            <td>
                <table class="table table-striped">
                    <tr class="tr1">
                        <td>
                            <strong>Control</strong>
                        </td>
                    </tr>
                    @foreach (var item4 in order1)
                    {
                        <tr class="tr1">
                            <th>
                                @Html.ActionLink("Vender", "Venta", new { id = item4.id })
                            </th>
                        </tr>
                    }
                </table>
            </td>
        </tr>
    </table>
    <div align="left">
        <a class="btn btn-default" href="~/user/inventarioCtrl">&laquo; Regresar</a>
    </div>
</body>