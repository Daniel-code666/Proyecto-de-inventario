                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Iniciar Sesión" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <div align="right">
            @Html.ActionLink("Registrar Usuario", "Registration", "user") |
            @Html.ActionLink("Recuperar contraseña", "recoverPass", "user")
        </div>
        
